<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_forecast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/list_item_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomorrow"
        app:layout_constraintTop_toTopOf="@+id/list_item_icon"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/list_item_icon"
        android:layout_marginLeft="@dimen/default_margin" />

    <TextView
        android:id="@+id/list_item_forecast_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        app:layout_constraintTop_toBottomOf="@+id/list_item_date_textview"
        app:layout_constraintLeft_toRightOf="@+id/list_item_icon"
        android:layout_marginLeft="@dimen/default_margin" />

    <TextView
        android:id="@+id/list_item_high_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21°"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_item_icon"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/list_item_low_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8°"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_high_textview"
        android:layout_marginRight="@dimen/default_margin"

        />

</android.support.constraint.ConstraintLayout>